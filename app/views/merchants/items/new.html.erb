<h1>New Item</h1>
<div class="new-item">
  <%= form_with model: Item.new, url: merchant_items_path do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %><br>

    <%= form.label :description %>
    <%= form.text_field :description %><br>

    <%= form.label :unit_price %>
    <%= form.text_field :unit_price %><br>

    <%= form.submit %>
    <% end %>


</div>
