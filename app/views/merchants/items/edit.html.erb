<h1>Merchant Item Update Page</h1>

<div class="merchant-form">
  <%= form_with model: @item, url: merchant_item_path do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %><br>

    <%= form.label :description %>
    <%= form.text_field :description %><br>

    <%= form.label :unit_price %>
    <%= form.text_field :unit_price %><br>

    <%= form.submit %>
    <% end %>
</div>
