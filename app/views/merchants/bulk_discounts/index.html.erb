<%= render 'merchants/header', locals: {merchant_id: @merchant} %>
<h1>Merchants Bulk Discounts Index Page</h1>
<p><%= link_to "New Discount", new_merchant_bulk_discount_path(@merchant) %></p>
<div class="merchant-bulk-discounts">
  <ul>
  <% @merchant.bulk_discounts.each do |bulk_discount| %>
    <li> Discount ID: <%= link_to bulk_discount.id, merchant_bulk_discount_path(@merchant, bulk_discount.id) %>
          Discount: <%= bulk_discount.discount %>%
          Quantity Threshold: <%=  bulk_discount.quantity_threshold %>
      </li>
  <% end %>
</div>

<div class="upcoming holidays">
  <h3>Upcoming Holidays</h3>
    <% @holidays.each do |name, date| %>
    <ol>
      <%= name %> <%= date %>
      </ol>
    <% end %>
</div>
